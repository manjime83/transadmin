{
    "eslint.autoFixOnSave": true,
    "eslint.validate": [
        {
            "language": "javascript",
            "autoFix": true
        },
        {
            "language": "typescript",
            "autoFix": true
        }
    ],
    "eslint.packageManager": "yarn",
    "editor.formatOnSave": true,
    "[javascript]": {
        "editor.formatOnSave": false,
    },
    "[typescript]": {
        "editor.formatOnSave": false,
    },
    "editor.tabSize": 2,
    "editor.rulers": [
        120
    ],
    "editor.snippetSuggestions": "none",
    "explorer.autoReveal": false
}